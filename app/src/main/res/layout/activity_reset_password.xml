<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/password_reset"
    android:orientation="vertical"
    android:textAlignment="gravity"
    tools:context=".LoginSignUpActivity">

    <EditText
        android:id="@+id/etEmailReset"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/blue_button"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:hint="Email"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="#18A1CC"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/etNewPasswordAgain"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/blue_button"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:hint=""
        android:inputType="textPassword"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="#18A1CC"
        android:textSize="30dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnSendResetLink"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/create_account_btn"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:hint="Send Reset Link"
        android:textAllCaps="false"
        android:textColor="#F2F2F2"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnTemp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:background="@drawable/create_account_btn"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Send Reset Link"
        android:textAllCaps="false"
        android:textColor="#F2F2F2"
        android:textSize="30dp"
        android:visibility="invisible"/>

</LinearLayout>